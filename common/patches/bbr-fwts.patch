+	.description = "ACPI Generic Event Device test",
+	.init        = acpi_ged_init,
+	.deinit      = acpi_ged_deinit,
+	.minor_tests = acpi_ged_tests
+};
+
+FWTS_REGISTER("acpi_ged", &acpi_ged_ops, FWTS_TEST_ANYTIME, FWTS_FLAG_TEST_SBBR)
+
