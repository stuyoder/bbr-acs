+#define RESOURCE_TYPE_MEMORY_RANGE 0
+#define RESOURCE_TYPE_IO_RANGE 1
+#define TRANSLATION_TYPE_MASK (1 << 5)
+
+static ACPI_HANDLE device;
+
+static ACPI_STATUS get_device_handle(ACPI_HANDLE handle, uint32_t level,
