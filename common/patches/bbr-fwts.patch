+		if (ACPI_SUCCESS(status)) {
+			fwts_log_info_verbatim(fw, "PCIe Root Complex Device: %s", full_name);
+			fwts_log_nl(fw);
+		}
+	}
+
+	return FWTS_OK;
+}
