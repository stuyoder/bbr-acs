+		return;
+	}
+
+	data = (uint8_t*)obj->Buffer.Pointer;
+
+	if (data[0] & 128)
+		test_CRS_large_resource_items(fw, name, objname, data, obj->Buffer.Length, &passed, &tag);
+}
